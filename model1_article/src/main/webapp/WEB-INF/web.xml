<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <welcome-file-list>
        <welcome-file>/WEB-INF/JSP/view/list.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>list</servlet-name>
        <jsp-file>/WEB-INF/JSP/view/list.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>modify</servlet-name>
        <jsp-file>/WEB-INF/JSP/view/modify.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>view</servlet-name>
        <jsp-file>/WEB-INF/JSP/view.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>write</servlet-name>
        <jsp-file>/WEB-INF/JSP/view/write.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/WEB-INF/JSP/service/articleRegister.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>/boards/free/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modify</servlet-name>
        <url-pattern>/boards/free/modify</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>write</servlet-name>
        <url-pattern>/boards/free/write</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>view</servlet-name>
        <url-pattern>/boards/free/view/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
</web-app>